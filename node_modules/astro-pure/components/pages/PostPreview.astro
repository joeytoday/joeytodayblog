---
import { Image } from 'astro:assets'
import { render, type CollectionEntry, type CollectionKey } from 'astro:content'
import type { HTMLTag, Polymorphic } from 'astro/types'

import { cn } from '../../utils'
import { Button, FormattedDate, Icon } from '../user'

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
  post: CollectionEntry<CollectionKey>
  detailed?: boolean
  simple?: boolean
  class?: string
}

const { as: Tag = 'div', post, detailed = false, simple = false, class: className } = Astro.props

const { id, data } = post

const { remarkPluginFrontmatter } = await render(post)
const postDate = data.updatedDate ?? data.publishDate
---

<li
  class={cn(
    'post-preview group/card flex flex-col relative rounded-2xl border bg-background transition-colors ease-in-out px-5 py-2.5 hover:bg-muted',
    detailed || simple && 'max-sm:px-4 sm:py-5',
    className
  )}

  style={detailed &&
    data.heroImage?.color &&
    `--preview-highlight:color-mix(in srgb,${data.heroImage.color} 40%,hsl(var(--foreground)/var(--un-text-opacity,1)));
    --preview-highlight-bg:hsl(from ${data.heroImage.color} h s l/20%)`}
>
  <a
    class={cn(
      'group/link w-full flex flex-col transition-all hover:text-primary',
      !detailed || simple && 'sm:flex-row',
      detailed && data.heroImage && 'max-md:pt-24'
    )}
    href={`/blog/${id}`}
    data-astro-prefetch
  >
    {
      detailed && data.heroImage && (
        <Image
          alt={data.heroImage.alt || data.title}
          class='cover-image absolute end-0 top-0 z-0 h-2/3 w-full rounded-2xl object-cover opacity-50 transition-opacity duration-300 group-hover/card:opacity-70 md:h-full md:w-3/5'
          loading='eager'
          {...data.heroImage}
        />
      )
    }


    <Tag class='z-10 flex-grow'>

      {/* Simple style metadata */}
      {simple && (
        <div class='flex items-center gap-2 py-1 text-sm mb-1 text-muted-foreground'>
          <FormattedDate date={postDate} />
          
          {/* reading time */}
          <span class='flex items-center gap-1'>
            <Icon name='time' class='size-4' />
            {remarkPluginFrontmatter.minutesRead}
          </span>

          {/* language */}
          {data.language && (
            <span class='flex items-center gap-1'>
              <Icon name='earth' class='size-4' />
              {data.language}
            </span>
          )}
        </div>
      )}

      {/* Detailed style metadata */}
      {detailed && (
        <div class='flex items-center gap-2 py-1 text-sm mb-1 text-muted-foreground'>
          <FormattedDate date={postDate} />
          
          {/* reading time */}
          <span class='flex items-center gap-1'>
            <Icon name='time' class='size-4' />
            {remarkPluginFrontmatter.minutesRead}
          </span>

          {/* language */}
          {data.language && (
            <span class='flex items-center gap-1'>
              <Icon name='earth' class='size-4' />
              {data.language}
            </span>
          )}
        </div>
      )}

      {/* Default style - show date and title as separate modules */}
      {!detailed && !simple && (
        <div class='flex items-center justify-between gap-4 w-full'>
          {/* Date and title container with responsive layout */}
          <div class='flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-3 flex-grow'>
            {/* Date module with fixed size and separate color */}
            <div class='flex-shrink-0 w-32 text-left py-1 px-3 text-primary flex items-center gap-2'>
              <svg xmlns='http://www.w3.org/2000/svg' width='14' height='14' viewBox='0 0 24 24' fill='none' stroke='#18181B' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'>
                <rect x='3' y='4' width='18' height='18' rx='2' ry='2'></rect>
                <line x1='16' y1='2' x2='16' y2='6'></line>
                <line x1='8' y1='2' x2='8' y2='6'></line>
                <line x1='3' y1='10' x2='21' y2='10'></line>
              </svg>
              <FormattedDate date={postDate} dateTimeOptions={{ month: '2-digit', day: '2-digit' }} />
            </div>
            
            {/* Title module */}
            <div class='flex-grow text-base'>
              {data.draft && <span class='text-red-500'>(Draft) </span>}
              <strong>{data.title}</strong>
            </div>
          </div>
          
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='16'
            height='16'
            viewBox='0 0 24 24'
            fill='none'
            stroke-width='2.5'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='preview-redirect my-1 stroke-muted-foreground group-hover/link:stroke-primary'
          >
            <line
              x1='5'
              y1='12'
              x2='19'
              y2='12'
              class='translate-x-4 scale-x-0 transition-all duration-300 ease-in-out group-hover/link:translate-x-1 group-hover/link:scale-x-100'
            ></line>
            <polyline
              points='12 5 19 12 12 19'
              class='translate-x-0 transition-all duration-300 ease-in-out group-hover/link:translate-x-1'
            ></polyline>
          </svg>
        </div>
      )}

      {/* title for simple/detailed styles */}
      {(detailed || simple) && (
        <div class='flex justify-between mb-1'>
          <div class={detailed || simple && 'text-lg'}>
            {data.draft && <span class='text-red-500'>(Draft) </span>}
            <strong>{data.title}</strong>
          </div>
          <br>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='16'
            height='16'
            viewBox='0 0 24 24'
            fill='none'
            stroke-width='2.5'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='preview-redirect my-1 stroke-muted-foreground group-hover/link:stroke-primary'
          >
            <line
              x1='5'
              y1='12'
              x2='19'
              y2='12'
              class='translate-x-4 scale-x-0 transition-all duration-300 ease-in-out group-hover/link:translate-x-1 group-hover/link:scale-x-100'
            ></line>
            <polyline
              points='12 5 19 12 12 19'
              class='translate-x-0 transition-all duration-300 ease-in-out group-hover/link:translate-x-1'
            ></polyline>
          </svg>
        </div>
      )}

      {simple && (
        <>
          {/* desc */}
          {data.description && (
            <p
              class={cn(
                'line-clamp-2 pt-1 text-base mb-1 text-muted-foreground sm:line-clamp-3'
              )}
            >
              {data.description}
            </p>
          )}
        </>
      )}

      {detailed && (

          <>
            {/* desc */}
            <p
              class={cn(
                'line-clamp-2 leading-relaxed pt-1 text-base mb-2 text-muted-foreground sm:line-clamp-3',
                data.heroImage && 'sm:me-24'
              )}
            >
              {data.description}
            </p>

          </>
        )
      }
    </Tag>
  </a>

  <!-- tags -->
  {
    detailed && data.tags && (
      <ul class='tag-list mt-1 flex flex-wrap gap-2'>
        {data.tags.map((tag: string) => (
          <li>
            <Button title={tag} href={`/tags/${tag}`} style='pill' />
          </li>
        ))}
      </ul>
    )
  }
</li>

<style>
  .post-preview {
    --preview-highlight-final: var(
      --preview-highlight,
      hsl(var(--primary) / var(--un-text-opacity, 1))
    );
  }
  .post-preview:hover {
    &,
    & .tag-list a {
      background-color: var(
        --preview-highlight-bg,
        hsl(var(--muted) / var(--un-bg-opacity, 1))
      ) !important;
    }
    & > a,
    & .tag-list a:hover {
      color: var(--preview-highlight-final) !important;
    }
    & > a .preview-redirect {
      stroke: var(--preview-highlight-final) !important;
    }
  }
  .cover-image {
    mask-image: linear-gradient(to right, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
    -ms-mask-image: -ms-linear-gradient(to right, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
    -webkit-mask-image: -webkit-linear-gradient(
      to right,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 1) 100%
    );
  }

  @media (max-width: 768px) {
    .cover-image {
      mask-image: linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
      -ms-mask-image: -ms-linear-gradient(to top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
      -webkit-mask-image: -webkit-linear-gradient(
        to top,
        rgba(0, 0, 0, 0) 0%,
        rgba(0, 0, 0, 1) 100%
      );
    }
  }
</style>
