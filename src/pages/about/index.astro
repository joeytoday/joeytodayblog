  {/* 赞助按钮，跳转 Projects 页面赞助标题下*/}
  <!-- <Button title='Sponsor Me' class='w-fit' href='/projects#sponsorship' style='ahead' /> -->

  {/* 音乐播放器：手机端兼容优化版 */}
  <p>🎵 接下来可以听着音乐继续看：</p>
  <div style="
    width: 100%; 
    max-width: 700px; 
    margin: 15px auto 0; 
    padding: 0; /* 移除内边距，避免定位冲突 */
    box-sizing: border-box;
    position: relative;
    /* 手机端最小宽度兜底，避免过窄 */
    min-width: 280px;
  ">
    <!-- 网易云歌单iframe：修复移动端兼容性 -->
    <iframe 
      src="https://music.163.com/outchain/player?type=0&id=13382956851&auto=0&height=280" 
      style="
        border: 1px solid #eee; 
        width: 100%; 
        height: 280px; 
        display: block; 
        border-radius: 8px;
        min-height: 260px; 
        /* 修复移动端iframe被拦截问题 */
        pointer-events: auto;
      "
      frameborder="0"
      allow="autoplay; encrypted-media"
      allowfullscreen="false"
      loading="lazy"
      title="我的音乐清单"
      <!-- 移动端关键：允许基础交互，避免被浏览器拦截 -->
      sandbox="allow-scripts allow-same-origin allow-popups allow-pointer-lock"
      <!-- 强制移动端渲染模式 -->
      scrolling="no"
    ></iframe>

    <!-- 加载提示：适配移动端定位，避免遮挡 -->
    <div id="musicLoader" style="
      position: absolute; 
      top: 0; 
      left: 0; /* 取消固定像素，适配所有宽度 */
      right: 0; 
      bottom: 0; 
      background: #fff; 
      border-radius: 8px; 
      display: flex; 
      align-items: center; 
      justify-content: center; 
      font-size: 14px; 
      color: #666;
      z-index: 1;
      /* 确保加载提示在移动端可见 */
      opacity: 1;
      transition: opacity 0.3s ease;
    ">
      音乐清单加载中...</div>

    <!-- 手机端提示：优化字体大小和颜色 -->
    <p style="
      text-align: center; 
      font-size: 12px; 
      color: #888; 
      margin: 8px 0 0;
      padding: 0 10px; /* 手机端左右留边，避免文字贴屏 */
    ">
      点击播放按钮，可切换歌单内歌曲 🎵（播放不了是版权限制）
    </p>
  </div>

  <!-- 加载控制脚本：修复移动端onload不触发问题 -->
  <script>
    // 类型断言+容错处理，兼容移动端浏览器
    const musicIframe = document.querySelector('iframe[src*="music.163.com"]');
    const musicLoader = document.getElementById('musicLoader');

    if (musicIframe && musicLoader) {
      // 方法1：监听iframe加载完成（主流浏览器）
      musicIframe.onload = function() {
        musicLoader.style.opacity = '0'; // 渐隐提示，更自然
        setTimeout(() => {
          musicLoader.style.display = 'none';
        }, 300);
      };

      // 方法2：监听iframe内容变化（兼容部分不触发onload的移动端浏览器）
      const checkIframeLoaded = setInterval(() => {
        try {
          // 尝试访问iframe内容，能访问说明加载完成
          if (musicIframe.contentWindow.document.body) {
            musicLoader.style.opacity = '0';
            setTimeout(() => {
              musicLoader.style.display = 'none';
            }, 300);
            clearInterval(checkIframeLoaded); // 停止检查
          }
        } catch (e) {
          // 跨域访问会报错，忽略即可
        }
      }, 500); // 每500ms检查一次

      // 方法3：超时兜底（避免一直显示加载中）
      setTimeout(() => {
        if (musicLoader.style.display !== 'none') {
          musicLoader.innerHTML = '加载超时，点击刷新重试';
          musicLoader.style.color = '#ff4444'; // 红色提示更明显
          // 点击重试功能
          musicLoader.style.cursor = 'pointer';
          musicLoader.addEventListener('click', () => {
            musicIframe.src = musicIframe.src; // 重新加载iframe
            musicLoader.innerHTML = '重新加载中...';
            musicLoader.style.color = '#666';
          });
        }
        clearInterval(checkIframeLoaded);
      }, 8000); // 8秒超时（适配移动端慢网络）
    }
  </script>


